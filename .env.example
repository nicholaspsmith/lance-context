# glancey Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API key (optional - highest priority embedding backend)
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIza...

# Ollama server URL (optional - local fallback)
# Default: http://localhost:11434
OLLAMA_URL=http://localhost:11434

# Project path to index (optional)
# Default: current working directory
GLANCEY_PROJECT=/path/to/your/project
